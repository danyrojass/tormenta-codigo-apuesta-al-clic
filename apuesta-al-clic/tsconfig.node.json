{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "rootDir": "src/server",
    "declaration": false,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/server/**/*.ts", "src/server/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
